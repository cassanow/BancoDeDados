@model CadastroUsuarios.Models.Pessoa;
@{
    if (Model.ID > 0)
    {
        ViewData["Title"] = "Editar Pessoa";
    }
    else
    {
        ViewData["Title"] = "Criar Pessoa";
    }
}

<h2>
    @if (Model.ID > 0)
    {
        <text>Editar Pessoa</text>
    }
    else
    {
        <text>Adicionar Pessoa</text>
    }
</h2>
<br/>
<form asp-action="Criar" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input asp-for="Nome" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Data de Nascimento </label>
        <input asp-for="DataNascimento" type="date" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Sexo</label>
        <input asp-for="Sexo" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Estado Civil</label>
        <input asp-for="EstadoCivil" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">CPF</label>
        <input asp-for="CPF" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">CEP</label>
        <input asp-for="CEP" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Endereço</label>
        <input asp-for="Endereço" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Número</label>
        <input asp-for="Número" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Complemento (Opcional)</label>
        <input asp-for="Complemento" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Bairro</label>
        <input asp-for="Bairro" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Cidade</label>
        <input asp-for="Cidade" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">UF</label>
        <input asp-for="UF" type="text" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Confirmar</button>
    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn btn-primary w-255">Voltar ao Menu</a>
    </div>

</form>
