<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CadastroUsuarios</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CadastroUsuarios.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #000;
            color: #ffffff;
            font-weight: bold;
        }

        .navbar, .footer, .card, .table, .form-control, .form-select {
            background-color: #000;
            color: #ffffff;
        }

            .navbar-brand, .nav-link, .footer a, th, td, label, h1, h2, h3, h4, h5, h6 {
                color: #ffffff;
                font-weight: bold;
            }

                .nav-link:hover {
                    color: #0d6efd;
                }

        .footer {
            padding: 15px 0;
        }

        a {
            color: #0d6efd;
            font-weight: bold;
        }

            a:hover {
                color: #66b2ff;
            }

        .form-control::placeholder {
            color: #aaa;
        }

        .table th, .table td {
            border-color: #333;
        }

        .navbar-toggler {
            border-color: #fff;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark shadow-sm">
            <div class="container-fluid justify-content-center">
                <div class="d-flex flex-column align-items-center">
                    <a class="navbar-brand mb-1 display-4" asp-area="" asp-controller="Home" asp-action="Index">CadastroUsuarios</a>
                    <div class="collapse navbar-collapse justify-content-center">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Criar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Editar">Editar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Remover">Remover</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Pessoa" asp-action="Index">Pessoas Cadastradas</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto text-center">
        <div class="container">
            &copy; 2025 - <a href="#">CadastroUsuarios</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
